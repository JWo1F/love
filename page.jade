!!!
html
  head
    title Любовь
    meta(charset='utf8')
    link(href='/styles.css', rel='stylesheet')
  body
    canvas#heart
    #info
      | Наши сердца стучатся вместе уже
      br
      - function setDate(b,c,a,e){var d=parseFloat(b.toString()[b.toString().length-1]);if(b>10&&b<21||!d){return e}if(d==1){return c}else{if(d>1&&d<5){return a}else{if(d>4&&d<11){return e}}}};
      
      - yea += ' ' + setDate(yea, 'год', 'года', 'лет');
      - mon += ' ' + setDate(mon, 'месяц', 'месяца', 'месяцев');
      - day += ' ' + setDate(day, 'день', 'дня', 'дней');
      - hou += ' ' + setDate(hou, 'час', 'часа', 'часов');
      - min += ' ' + setDate(min, 'минуту', 'минуты', 'минут');
      - sec += ' ' + setDate(sec, 'секунду', 'секунды', 'секунд');
      
      span#yea #{yea}, 
      span#mon #{mon}, 
      span#day #{day}, 
      span#hou #{hou}, 
      span#min #{min} 
      span#sec и #{sec}
      input#date(type='hidden', value=dat)
    script
      var date = new Date(document.getElementById('date').value);
      
      function setDate(b,c,a,e){var d=parseFloat(b.toString()[b.toString().length-1]);if(b>10&&b<21||!d){return e}if(d==1){return c}else{if(d>1&&d<5){return a}else{if(d>4&&d<11){return e}}}};
      
      setInterval(function () {
        var curr = new Date();
        var diff = curr - date;
        
        var sec = Math.floor(diff/1000 % 60);
        var min = Math.floor(diff/1000/60 % 60);
        var hou = Math.floor(diff/1000/60/60 % 24);
        var day = Math.abs(curr.getDate() - date.getDate());
        var mon = Math.abs(curr.getMonth() - date.getMonth());
        var yea = curr.getFullYear() - date.getFullYear();
        
        
        document.getElementById('yea').innerHTML = yea + ' ' + setDate(yea, 'год', 'года', 'лет') + ', ';
        document.getElementById('mon').innerHTML = mon + ' ' + setDate(mon, 'месяц', 'месяца', 'месяцев') + ', ';
        document.getElementById('day').innerHTML = day + ' ' + setDate(day, 'день', 'дня', 'дней') + ', ';
        document.getElementById('hou').innerHTML = hou + ' ' + setDate(hou, 'час', 'часа', 'часов') + ', ';
        document.getElementById('min').innerHTML = min + ' ' + setDate(min, 'минуту', 'минуты', 'минут') + ', ';
        document.getElementById('sec').innerHTML = sec + ' ' + setDate(sec, 'секунду', 'секунды', 'секунд');
      }, 1000);
    script(src='/paper-full.min.js')
    script
      var canvas = document.getElementById('heart');
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    script(type="text/paperscript", canvas='heart', src='/core.js')